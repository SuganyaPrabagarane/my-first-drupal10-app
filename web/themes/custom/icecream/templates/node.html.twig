{#
  Custom node template for Icecream theme
  This ensures that the title (label) is visible for blog/article pages
#}

<article{{ attributes.addClass('node', 'node--type-' ~ node.bundle|clean_class) }}>

  {# Print title if this is a full page view #}
  {% if label and not page %}
    <h2{{ title_attributes.addClass('node-title') }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% elseif label and page %}
    <h1{{ title_attributes.addClass('page-title') }}>
      {{ label }}
    </h1>
  {% endif %}

  <div{{ content_attributes.addClass('node-content') }}>
    {{ content }}
  </div>

</article>
